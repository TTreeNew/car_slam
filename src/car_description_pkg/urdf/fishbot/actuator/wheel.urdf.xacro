<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:macro name="wheel_xacro" params="wheel_name xyz m r h">

    <link name="${wheel_name}_wheel_link">
        <visual>
        <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.032" length="0.04"/>
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 0.8"/>
            </material>
        </visual>
        <collision>
        <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.032" length="0.04"/>
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 0.8"/>
            </material>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="1.57079 0.0 0.0"/>
            <mass value="${m}"/>
            <inertia ixx="${(m/12)*(h*h+3*r*r)}" ixy="0.0" ixz="0.0" iyy="${(m/12)*(h*h+3*r*r)}" iyz="0.0" izz="${(m/2)*(r*r)}"/>
        </inertial>        
    </link>

    <joint name="${wheel_name}_wheel_joint" type="continuous">
        <parent link="base_link"/>    <!--base_link-->
        <child link="${wheel_name}_wheel_link"/>
        <origin xyz="${xyz}" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <gazebo reference="${wheel_name}_wheel_link">
        <material>Gazebo/Yellow</material>
        <mu1 value='20.0'/>
        <mu2 value='20.0'/>
        <kp value='1000000.0'/>
        <kd value='1.0'/>
    </gazebo> 
   
</xacro:macro>
</robot>
